<Patch>
	<!-- This shit is worse than squirrel meat. Removing it completely, using regular methods without patches, will make your game explode in ways you wouldn't even imagine are possible. Do not mess with plant scraps. -->
	<Operation Class="PatchOperationRemove">
		<success>Always</success>
		<xpath>Defs/RecipeDef/ingredients/li/filter/thingDefs/li[text()="PlantScraps"]</xpath>
	</Operation>
	<Operation Class="PatchOperationRemove">
		<success>Always</success>
		<xpath>Defs/RecipeDef/fixedIngredientFilter/thingDefs/li[text()="PlantScraps"]</xpath>
	</Operation>
	<Operation Class="PatchOperationRemove">
		<success>Always</success>
		<xpath>Defs/RecipeDef/defaultIngredientFilter/thingDefs/li[text()="PlantScraps"]</xpath>
	</Operation>
	<Operation Class="PatchOperationRemove">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="PlantScraps"]/thingCategories</xpath>
	</Operation>
</Patch>